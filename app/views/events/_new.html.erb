<%= form_for :event, :action=>:create, :remote=>true, :html=>{:class=>"form-inline"} do |f| %>
  <div class="form-group">
    <%= f.label :name, :class=>"sr-only control-label" %>
    <%= f.text_field :name, :class=>"col-sm-10 form-control", :autofocus => true, :placeholder=>"Name" %>
  </div>
  <div class="form-group">
    <%= f.label :slug, :class=>"sr-only control-label" %>
    <%= f.text_field :slug, :class=>"col-sm-10 form-control", :autofocus => true, :placeholder=>"Slug" %>
  </div>
  <div class="form-group">
    <%= f.label :due_date, :class=>"sr-only control-label" %>
    <%= f.text_field :due_date, :class=>"col-sm-10 form-control", :autofocus => true, :placeholder=>"Due Date" %>
  </div>
  <div class="form-group">
    <div class="col-md-6 col-sm-6 col-xs-12">
      <%= f.submit :class=>"form-control btn btn-success" %>
    </div>
  </div>
<% end %>
