<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html=>{:class=>"form-horizontal"}) do |f| %>
  <div class="form-group">
    <%= f.label :email, :class=>"col-md-2 visible-md visible-lg control-label" %>
    <div class="col-md-10 col-sm-12 col-xs-12">
      <%= f.email_field :email, :class=>"col-sm-10 form-control", :autofocus => true, :placeholder=>"Your Email Address" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password, :class=>"col-md-2 visible-md visible-lg control-label" %>
    <div class="col-md-10 col-sm-12 col-xs-12">
      <%= f.password_field :password, :class=>"form-control", :placeholder=>"Password" %>
    </div>
  </div>
  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <div class="col-md-2 visible-md visible-lg"></div>
      <div class="col-md-10 col-sm-12 col-xs-12 text-left">
        <div class="checkbox">
          <label>
            <%= f.check_box :remember_me %> <%= f.label :remember_me %>
          </label>
        </div>
      </div>
    </div>
  <% end -%>
  <div class="form-group">
    <div class="col-md-6 col-sm-6 col-xs-12">
      <button type="button" class="btn btn-default form-control" data-dismiss="modal">Close</button>
    </div>
    <div class="col-md-6 col-sm-6 col-xs-12">
      <%= f.submit "Sign in", :class=>"form-control btn btn-success" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= render "devise/shared/links" %>
  </div>
<% end %>
