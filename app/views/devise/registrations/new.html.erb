<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html=>{:class=>"form-horizontal"}) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email, :class=>"col-md-2 visible-md visible-lg control-label" %>
    <div class="col-md-10 col-sm-12 col-xs-12">
      <%= f.email_field :email, :autofocus => true, :class=>"form-control", :placeholder=>"Email Address" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, :class=>"col-md-2 visible-md visible-lg control-label" %>
    <div class="col-md-10 col-sm-12 col-xs-12">
      <%= f.password_field :password, :class=>"form-control", :placeholder=>"Password" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, :class=>"col-md-2 visible-md visible-lg control-label" %>
    <div class="col-md-10 col-sm-12 col-xs-12">
      <%= f.password_field :password_confirmation, :class=>"form-control", :placeholder=>"Password Confirmation" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-6 col-sm-6 col-xs-12">
      <button type="button" class="btn btn-default form-control" data-dismiss="modal">Close</button>
    </div>
    <div class="col-md-6 col-sm-6 col-xs-12">
      <%= f.submit "Sign up", :class=>"form-control btn btn-success" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= render "devise/shared/links" %>
  </div>
<% end %>
